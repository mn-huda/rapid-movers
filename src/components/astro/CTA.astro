---
const { lang } = Astro.props
---

<div id='cta'>
  <a
    href='https://wa.me/+8801600317576'
    target='_blank'
  >
    <button>
      <img
        src='whatsapp.png'
        alt={lang === 'bn'
          ? 'হোয়্যাটস্‌অ্যাপ আইকন'
          : 'WhatsApp icon'}
        width='42'
        height='42'
      />
      <span
        >{
          lang === 'bn'
            ? 'হোয়্যাটস্‌অ্যাপে যোগাযোগ করুন'
            : 'Contact on WhatsApp'
        }</span
      >
    </button>
  </a>
  <a href='#calculate'>
    <div id='estimate'>
      {
        lang === 'bn'
          ? 'খরচ আন্দাজ করুন'
          : 'Estimate calculator'
      }
    </div>
  </a>
</div>

<style>
  button {
    align-items: center;
    background-color: #25d366;
    border-radius: 16rem;
    display: inline-flex;
    gap: 0.62rem;
    padding-inline: 2rem;
    transition-duration: 100ms;
  }

  button > img {
    margin-block-end: 0.2rem;
  }

  #cta {
    align-items: center;
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
  }

  #estimate {
    font-weight: 600;
    text-decoration: underline;
  }

  #estimate:hover,
  #estimate:focus {
    color: gray;
  }
</style>
